generator client {
  provider        = "prisma-client-js"
  // This flag enables the use of the new Serverless Driver Adapter
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id String @id @default(cuid())

  email    String
  password String
  name     String
  users    User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SubAdmin {
  id String @id @default(uuid())

  name      String
  role      String
  mobileNo  String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id String @id @default(cuid())

  pnoNo    String  @unique
  password String
  name     String?
  role     String?

  totalCount Int? @default(0) // this will be total objects in the QR array

  co            String?
  policeStation String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  qrCode QR[]

  Admin   Admin   @relation(fields: [adminId], references: [id])
  adminId String
  photo   Photo?  @relation(fields: [photoId], references: [id])
  photoId String?
}

model QR {
  id String @id @default(cuid())

  // admin can creae 
  lattitude     String
  longitude     String
  policeStation String
  catagory      String?
  dutyPoint     String?

  // jab isScanned true hoga tab scannedbny and scanned on update honge
  // update by 
  scannedOn String?
  scannedBy String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?

  photo   Photo?  @relation(fields: [photoId], references: [id])
  photoId String?
}

model Photo {
  id        String   @id @default(cuid())
  url       String
  clickedOn String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
  qrs       QR[]
}
