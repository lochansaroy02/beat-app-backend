generator client {
  provider        = "prisma-client-js"
  // This flag enables the use of the new Serverless Driver Adapter
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Photos {
  id        String   @id @default(cuid())
  url       String
  clickedOn String?
  // lattitude String 
  // longitude String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}

model User {
  id String @id @default(cuid())

  pnoNo    String  @unique
  password String
  name     String?
  role     String?

  totalCount Int @default(0)

  co            String?
  policeStation String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  photos Photos[]

  Admin   Admin  @relation(fields: [adminId], references: [id])
  adminId String
}

model Admin {
  id String @id @default(cuid())

  email    String
  password String
  name     String
  users    User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SubAdmin {
  id String @id @default(uuid())

  name      String
  role      String
  mobileNo  String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model QR {
  id String @id @default(cuid())

  lattitude     String
  longitude     String
  policeStation String

  catagory  String?
  dutyPoint String?
  cug       String?
  CUG       String?
  // jab isScanned true hoga tab scannedbny and scanned on update honge
  isScanned Boolean  @default(false)
  scannedOn String?
  scannedBy String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
